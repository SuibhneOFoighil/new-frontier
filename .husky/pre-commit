#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run ESLint first (fastest check)
echo "ğŸ“ Checking code style with ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ ESLint failed. Please fix the linting issues above."
  exit 1
fi

# Run TypeScript type checking
echo "ğŸ”§ Checking TypeScript types..."
npx tsc --noEmit
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type checking failed. Please fix the type errors above."
  exit 1
fi

# Only run build if we're not in development mode
if [ "$NODE_ENV" != "development" ]; then
  echo "ğŸ—ï¸  Testing build..."
  npm run build
  if [ $? -ne 0 ]; then
    echo "âŒ Build failed. Please fix the build errors above."
    exit 1
  fi
else
  echo "âš¡ Skipping build check in development mode"
fi

echo "âœ… All pre-commit checks passed! Ready to commit."
